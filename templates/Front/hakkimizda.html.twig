{% extends 'base.html.twig' %}
{% block title %} Hakkımızda {{ data[0].title }} {% endblock %}


    {% block content %}

        <!-- BREADCRUMB -->
        <div id="breadcrumb">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="{{ path('home') }}">Ana Sayfa</a></li>
                    <li class="active">Hakkımızda</li>
                </ul>
            </div>
        </div>
        <!-- /BREADCRUMB -->

        <!-- section -->
        <div class="section">
            <!-- container -->
            <div class="container" method="post">
                <!-- row -->
                <div class="row">
                    <div class="col-md-7">
                        {{ data[0].aboutus|raw }}
                    </div>
                    <div class="col-md-5">
                        {{ include('flashMessages.html.twig') }}
                        <h3>Bize Ulaşın</h3>
                        <form method="post" name="messages">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" name="messages[email]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text text-muted">Bu bilgiyi kimseyle paylaşmıyoruz.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Adınız</label>
                                <input type="text" name="messages[name]" class="form-control" id="exampleInputPassword1" placeholder="İsim">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Konu</label>
                                <input type="text" name="messages[subject]" class="form-control" id="exampleInputPassword1" placeholder="Konu">
                            </div>
                            <div class="form-group">
                                <label for="comment">Yorumunuz</label>
                                <textarea name="messages[message]" class="form-control" rows="5" id="comment"></textarea>
                            </div>
                            <input type="hidden" name="token" value="{{ csrf_token('form-message') }}">
                            <button type="submit" class="btn btn-primary">Mesaj Gönder</button>
                        </form>
                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /section -->

    {% endblock %}
