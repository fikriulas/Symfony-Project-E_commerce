<div class="module-body table">
    <div  id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
<form method="post" class="form-horizontal row-fluid" >

    <div class="control-group">
        <label class="control-label" for="basicinput">Üst Kategori</label>
        <div class="controls">
            <select name="category[parentid]" tabindex="1" data-placeholder="Select here.." class="span8">
                <option value="asdd">Birini Seçin..</option>
                <option value="0">Ana Kategori</option>
                {% for cat in categoryList %}
                    <option value="{{ cat.id }}">{{ cat.title }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="basicinput">Başlık</label>
        <div class="controls">
            <input type="text" name="category[title]" value="{{ category.title }}" id="basicinput" placeholder="Type something here..." class="span8">

        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="basicinput">Anahtar Kelime</label>
        <div class="controls">
            <input type="text" name="category[keywords]" value="{{ category.keywords }}" id="basicinput" placeholder="Type something here..." class="span8">

        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="basicinput">Açıklama</label>
        <div class="controls">
            <input type="text" name="category[aciklama]" value="{{ category.aciklama }}" id="basicinput" placeholder="Type something here..." class="span8">

        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="basicinput">Statü</label>
        <div class="controls">
            <select name="category[status]" tabindex="1" data-placeholder="Select here.." class="span8">
                <option value="True">True</option>
                <option selected value="False">False</option>

            </select>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-large btn-primary ">Gönder</button>
        </div>
    </div>
</form>
    </div>
</div>
