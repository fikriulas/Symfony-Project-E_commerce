<div class="module-body table">
    <div  id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
        <form method="post" class="form-horizontal row-fluid" >
            <div class="control-group">
                <label class="control-label" for="basicinput">Ürün Kategorisi</label>
                <div class="controls">
                    <select name="product[categoryid]" tabindex="1" data-placeholder="Select here.." class="span8">
                        {% if (catTitle) %}
                        <option value="{{ product.categoryid }}">{{ catTitle[0].title }}</option>
                        {% endif %}
                        {% for cat in catlist %}
                            <option value="{{ cat.id }}">{{ cat.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Başlık</label>
                <div class="controls">
                    <input type="text" name="product[title]" value="{{ product.title }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Anahtar Kelime</label>
                <div class="controls">
                    <input type="text" name="product[keywords]" value="{{ product.keywords }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Açıklama</label>
                <div class="controls">
                    <input type="text" name="product[description]" value="{{ product.description }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Alış Fiyatı</label>
                <div class="controls">
                    <input type="number" name="product[price]" value="{{ product.price }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Satış Fiyatı</label>
                <div class="controls">
                    <input type="number" name="product[sprice]" value="{{ product.sprice }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Miktar</label>
                <div class="controls">
                    <input type="number" name="product[amount]" value="{{ product.amount }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">İmage</label>
                <div class="controls">
                    <input type="text" name="product[image]" value="{{ product.image }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">İndirim</label>
                <div class="controls">
                    <input type="number" name="product[indirim]" value="{{ product.indirim }}" id="basicinput" placeholder="Type something here..." class="span8">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Detay</label>
                <div class="controls">
                    <textarea name="product[detail]" id="editor1" rows="10" cols="80">
                    {{ product.detail }}
                    </textarea>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="basicinput">Statü</label>
                <div class="controls">
                    <select name="product[status]" tabindex="1" data-placeholder="Select here.." class="span8">
                        <option selected value="{{ product.status }}">{{ product.status }}</option>
                        <option value="True">True</option>
                        <option value="False">False</option>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-large btn-primary ">Gönder</button>
                </div>
            </div>
        </form>

    </div>
</div>

