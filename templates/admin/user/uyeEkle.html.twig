{% extends 'adminbase.html.twig' %}

{% block title %} Üye Ekle {% endblock %}

{% block body %}

    {% block sidebar %} {{ include ('admin/adminsidebar.html.twig') }} {% endblock %}

    {% block content %}

        <div class="span9">
            <div class="content">
                <div class="module">
                    <div class="module-head">
                        <h3>Üye Ekle</h3>
                    </div>
                    <div class="module-body">
                        <br>
                        <form method="post" class="form-horizontal row-fluid" >

                            <div class="control-group">
                                <label class="control-label" for="basicinput">Adı Soyadı</label>
                                <div class="controls">
                                    <input type="text" name="userlist[adsoyad]" id="basicinput" placeholder="Type something here..." class="span8">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="basicinput">Kullanıcı Adı</label>
                                <div class="controls">
                                    <input type="text" name="userlist[kullaniciadi]" id="basicinput" placeholder="Type something here..." class="span8">

                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="basicinput">Şifre</label>
                                <div class="controls">
                                    <input type="password" name="userlist[sifre]" id="basicinput" placeholder="Type something here..." class="span8">

                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="basicinput">Mail</label>
                                <div class="controls">
                                    <input type="email" name="userlist[mail]" id="basicinput" placeholder="Type something here..." class="span8">

                                </div>
                            </div>
                             <!--
                            <div class="control-group">
                                <label class="control-label" for="basicinput">tarih</label>
                                <div class="controls">
                                    <input type="datetime-local" name="userlist[tarih]" id="basicinput" placeholder="Type something here..." class="span8">

                                </div>
                            </div>
                            -->

                            <div class="control-group">
                                <label class="control-label" for="basicinput">Üye Tipi</label>
                                <div class="controls">
                                    <select name="userlist[uyetipi]" tabindex="1" data-placeholder="Select here.." class="span8">
                                        <option value="asdd">Birini Seçin..</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Editör">Editör</option>
                                        <option value="Üye">Üye</option>
                                    </select>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-large btn-primary ">Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--/.content-->
        </div>
    {% endblock %}
{% endblock %}
