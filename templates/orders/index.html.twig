{% extends 'base.html.twig' %}
{% block title %} Siparişleriniz  {% endblock %}


    {% block content %}

        <!-- BREADCRUMB -->
        <div id="breadcrumb">
            <div class="container">
                <ul class="breadcrumb">
                    <li><a href="{{ path('home') }}">Ana Sayfa</a></li>
                    <li class="active">Siparişler</li>
                </ul>
            </div>
        </div>
        <!-- /BREADCRUMB -->

        <!-- section -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <form id="checkout-form" class="clearfix">


                        <div class="col-md-12">
                            <div class="order-summary clearfix">
                                <div class="section-title">
                                    <h3 class="title">Siparişler</h3>
                                    {{ include('flashMessages.html.twig') }}
                                </div>
                                <table class="shopping-cart-table table">
                                    <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th></th>

                                        <th class="text-center">Fiyat</th>
                                        <th class="text-center">Miktar</th>
                                        <th class="text-center">Toplam</th>
                                        <th class="text-center">Görüntüle</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set total = 0 %}
                                    {% for shop in shopcards %}
                                        <tr>

                                            <td class="thumb"><img src="{{ asset('uploads') }}//images/{{ shop.image }}" alt=""></td>
                                            <td class="details">
                                                <a href="#">{{ shop.title }}</a>
                                            </td>

                                            <td class="price text-center"><strong>{{ shop.sprice }} ₺</strong><br></td>
                                            <td class="qty text-center"><input class="input" readonly type="number" value="{{ shop.quantity }}"></td>
                                            <td class="total text-center"><strong class="primary-color">{{ (shop.sprice * shop.quantity) }} ₺</strong></td>
                                            {% set total = (shop.sprice * shop.quantity) + total  %}
                                            <td class="text-center"><a class="main-btn icon-btn" href="{{ path('orders_show', {'id': shop.id}) }}">  <i class="fas fa-eye"></i> </a></td>




                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        {% set value = 100 %}
                                        <th class="empty" colspan="3"></th>
                                        <th>Ara Toplam</th>
                                        <th colspan="2" class="sub-total">
                                            ₺  {{ total }}
                                        </th>
                                    </tr>
                                    <tr>
                                        <th class="empty" colspan="3"></th>
                                        <th>Kargo</th>
                                        <td colspan="2">Ücretsiz Gönderi</td>
                                    </tr>
                                    <tr>
                                        <th class="empty" colspan="3"></th>
                                        <th>Toplam</th>
                                        <th colspan="2" class="total">₺ {{ total }}</th>
                                    </tr>
                                    </tfoot>
                                </table>
                                <div class="pull-right">
                                    <!-- <button class="primary-btn">Place Order</button> -->

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /section -->

    {% endblock %}
